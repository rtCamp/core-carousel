{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "preferredVersions": {
        "php": "8.2",
        "wp": "latest"
    },
    "landingPage": "/",
    "steps": [
        {
            "step": "installTheme",
            "themeData": {
                "resource": "wordpress.org/themes",
                "slug": "twentytwentyfour"
            },
            "options": { "activate": true }
        },
        {
            "step": "installPlugin",
            "pluginData": {
                "resource": "url",
                "url": "https://dl.dropboxusercontent.com/scl/fi/tsikfq3z75gbgj4cqp4yx/core-carousel.zip?rlkey=lpeskd8cuvlw3t7l64opfffa7&st=kato5eds&dl=1"
            },
            "options": { "activate": true }
        },
        {
            "step": "login",
            "username": "admin",
            "password": "password"
        },
        {
            "step": "importWxr",
            "file": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/rtCamp/core-carousel/try/playground/content.xml"
            }
        },
        {
            "step": "runPHP",
            "code": "<?php require_once 'wordpress/wp-load.php'; $posts = get_posts(['post_type'=>'page', 'title'=>'Core Carousel Interactive Demo']); if($posts) { update_option('show_on_front', 'page'); update_option('page_on_front', $posts[0]->ID); }"
        }
    ]
}